{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "NLog": {
    "throwConfigExceptions": true,
    "targets": {
      "logfile": {
        "type": "File",
        "fileName": "your/path/logs/imp-decisions-IDP-${shortdate}.log",
        "layout": "${longdate}|${uppercase:${level}}|${message} ${exception:format=tostring}"
      },
      "logconsole": {
        "type": "Console",
        "layout": "${longdate}|${uppercase:${level}}|${message} ${exception:format=tostring}"
      }
    },
    "rules": {
      "logfile": {
        "logger": "*",
        "minLevel": "Info",
        "writeTo": "logfile"
      },
      "logconsole": {
        "logger": "*",
        "minLevel": "Info",
        "writeTo": "logconsole"
      }
    }
  }
}
