{
  "ConnectionStrings": {
    "MySqlDbConnection": "Server=myServerAddress;Database=myDataBase;Uid=myUsername;Pwd=myPassword;"
  },
  "JwtSettings": {
    "TokenLifetimeMinutes": "80",
    "SecretKey": "theSecretKeyOfTheJWTAlg e.g:BFCVbbtvC1QoutsBujROE4cD_sRE3n16ohmM4sUQC0Q",
    "IssuerServerUrl": "thisServerURL",
    "ValidAudiences": "yourApiGateWayServerUrl;yourUIServerUrl"
  },
  "AccessClaims": {
    "ClaimTypeName": "UserAccessType",
    "DefaultUserAccessLevel": "Level0"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "example.com;localhost",
  "Kestrel": {
    "Limits": {
      "MaxConcurrentConnections": 100,
      "MaxConcurrentUpgradedConnections": 100
    },
    "DisableStringReuse": true
  },
  "IPMEmailMicroservice": {
    "ApiGatewayAddress": "https://localhost:5003/",
    "EmailMicroservice": "eml/api/",
    "ContentTypeHeader": "application/vnd.h2020ipmdecisions.email+json",
    "SecurityTokenCustomHeader": "ipm-eml-auth",
    "SecurityToken": "1234"
  },
  "NLog": {
    "throwConfigExceptions": true,
    "targets": {
      "logfile": {
        "type": "File",
        "fileName": "your/path/logs/imp-decisions-IDP-${shortdate}.log",
        "layout": "${longdate}|${uppercase:${level}}|${message} ${exception:format=tostring}"
      },
      "logconsole": {
        "type": "Console",
        "layout": "${longdate}|${uppercase:${level}}|${message} ${exception:format=tostring}"
      }
    },
    "rules": {
      "logfile": {
        "logger": "*",
        "minLevel": "Warn",
        "writeTo": "logfile"
      },
      "logconsole": {
        "logger": "*",
        "minLevel": "Warn",
        "writeTo": "logconsole"
      }
    }
  }
}